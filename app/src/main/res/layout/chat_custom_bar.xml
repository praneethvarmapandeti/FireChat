<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >



    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:id="@+id/custom_bar_image"
        android:layout_margin="10dp"
        android:src="@drawable/jellyfish1" />

    <TextView
        android:id="@+id/custom_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_single_image"

        android:text="Display Name"
        android:textSize="18sp"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/custom_bar_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/custom_bar_title"
        android:layout_marginTop="25dp"
        android:text="Last Seen"
        android:textSize="13sp"
        android:textColor="#fff"/>


</RelativeLayout>